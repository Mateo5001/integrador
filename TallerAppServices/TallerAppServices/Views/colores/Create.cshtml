@model TallerAppServices.Models.colores

@using (Html.BeginForm("create","colores",null, FormMethod.Post, new { @id="formEncabezado" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>colores</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nombreColor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreColor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombreColor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.codigoColor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.codigoColor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codigoColor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @{
                    string idusuario = System.Web.HttpContext.Current.Session["idUsuario"].ToString();
                }
                <input Length="9" data-val="true" data-val-number="The field idUsuarioCreacion must be a number." data-val-required="El campo idUsuarioCreacion es obligatorio." id="idUsuarioRegistra" name="idUsuarioRegistra" type="hidden" value="@idusuario" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fechaRegistro, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fechaRegistro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fechaRegistro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.inactivo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.inactivo)
                    @Html.ValidationMessageFor(model => model.inactivo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button name="btnCrearEncabezado" id="btnCrearEncabezado" type="button" class="btn btn-default" >crear</button>
            </div>
        </div>
    </div>
}
