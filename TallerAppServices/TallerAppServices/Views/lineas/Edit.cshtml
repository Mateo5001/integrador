@model TallerAppServices.Models.lineas



    @using (Html.BeginForm("Edit","lineas","POST"))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>lineas</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idLinea)
    
            <div class="form-group">
                @Html.LabelFor(model => model.nombreLinea, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nombreLinea, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombreLinea, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.codigoLinea, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.codigoLinea, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.codigoLinea, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    @{
                        string idusuario = System.Web.HttpContext.Current.Session["idUsuario"].ToString();
                    }
                    <input Length="9" data-val="true" data-val-number="The field idUsuarioCreacion must be a number." data-val-required="El campo idUsuarioCreacion es obligatorio." id="idUsuarioCreacion" name="idUsuarioCreacion" type="hidden" value="@idusuario" />

                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.fechaCreacion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fechaCreacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fechaCreacion, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    