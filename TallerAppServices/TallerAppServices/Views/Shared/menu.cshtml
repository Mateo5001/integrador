@using IntrLibrary.General;
@using IntrLibrary.objects;



<div class="col-md-6">
    <ul class="nav  nav-stacked">
        @{
        var menus = Generics.listaMenu();
        foreach (Menu opcion in menus)
        {
        <li><a data-toggle="tab" href="#@opcion.Controlador@opcion.Metodo">@opcion.Metodo</a></li>
        }
        }
        <li ><a data-toggle="tab" href="#home">Home</a></li>
        <li> <a data-toggle="tab" href="#menu1">Menu 1</a></li>
        <li><a data-toggle="tab" href="#menu2">Menu 2</a></li>
    </ul>
</div> 
<div class="col-md-6">

    <div class="tab-content">
        @{
            foreach (Menu opcion in Generics.listaMenu())
            {
                <div id="@opcion.Controlador@opcion.Metodo" class="tab-pane fade">
                    <h3>@opcion.Controlador</h3>
                    <p>
                        @opcion.Metodo
                    </p>
                </div>
            }
        }
        <div id="home" class="tab-pane fade">
            <h3>Home</h3>
            <p>Some content in Home</p>
        </div>
        <div id="menu1" class="tab-pane fade">
            <h3>Menu 1</h3>
            <p>Some content in menu 1.</p>
        </div>
        <div id="menu2" class="tab-pane fade">
            <h3>Menu 2</h3>
            <p>Some content in menu 2.</p>
        </div>
    </div>
</div>