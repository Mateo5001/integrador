<!DOCTYPE html>
@using Microsoft.AspNet.Identity
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ColorSave 2.0</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

@{
    bool validaUser = System.Web.HttpContext.Current.Session["idUsuario"] == null ? true : false;
    if (Request.Url.LocalPath != "/Account/login")
    {
        if (validaUser)
        {
            Response.Redirect("~/Account/login");
        }
    }
}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="row">
            <div class="col">
                <div class="container">
                    <div class="navbar-header">

                        @Html.ActionLink("ColorSave 2.0", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })


                        

                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menuTop">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="menuTop" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        </ul>
                    </div>
                    @{
                        if (!validaUser)
                        {
                            <div class="navbar-fixed-top">
                                <button type="button" class="btn navbar-btn pull-right" data-toggle="collapse" data-target="#session">
                                    <span>opciones</span>
                                </button>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="col">
                <div class="container">
                    <div class="row">
                        @{
                            if (!validaUser)
                            {

                                <div id="session" class="collapse">
                                    <button type="button" class="btn navbar-btn" data-toggle="collapse" data-target="#session">
                                        <span>@Html.ActionLink("cerrar session", "logOut", "Account")</span>
                                    </button>
                                </div>
                            }

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="container body-content">
            
            <div class="row">
                @{

                    if (!validaUser)
                    {
                    <div class="col-md-8 ">
                        @Html.Partial("menu")
                    </div>
                    }
                }

                <div class="col fade in active">
                    @RenderBody()

                </div>
            </div>
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - powered by Azure</p>
                </footer>

        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
