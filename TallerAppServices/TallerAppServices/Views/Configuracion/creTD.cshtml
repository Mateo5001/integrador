
@{
    ViewBag.Title = "Configuración de Documentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Configuración de Documentos</h2>
<div class="col-md-12">

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#lisTD">Listado</a></li>
        <li><a data-toggle="tab" href="#CTD">Crear</a></li>
    </ul>

    <div class="tab-content">
        @{
            var guar = ViewBag.AlertaGuardad;
                if (guar==1)
                {
                    <div class="alert alert-success">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Datos Guardados!</strong> Se ha guardado el tipo de documento correctamente.
                    </div>
                }
                else if(guar==2)
                {
                    <div class="alert alert-danger">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Ha ocurrido un error!</strong> No se han guardado los cambios
                    </div>
            }
        }
        <div id="CTD" class="tab-pane fade">
            <h3>Creación de Tipos de Documento</h3>
            @{Html.RenderPartial("~/Views/tiposDocumentos/Create.cshtml");}
        </div>
        <div id="lisTD" class="tab-pane fade in active">
            <h3>Listado</h3>

            @Html.Partial("~/Views/tiposDocumentos/index.cshtml")
        </div>
    </div>
</div>

