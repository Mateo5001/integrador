@model TallerAppServices.Models.colorDetalle

@{
    Layout = null;
}

@using (Html.BeginForm("create", "colorDetalles", null, FormMethod.Post, new { @id = "FromDetalle" }))
{
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
        <h4>colorDetalle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" name="idColor" id="idColor" value="" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idTinta, "Tinta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTinta", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idTinta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cantidadPorcentaje, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantidadPorcentaje, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cantidadPorcentaje, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button id="btnAgregar" type="button" class="btn btn-default" >Agregar</button>
            </div>
        </div>
        <div id="listaTintas" class="row">

        </div>
    </div>
}
